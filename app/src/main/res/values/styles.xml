<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/colorControlHighLight</item>
        <item name="colorError">@color/error_color</item>
        <item name="android:fontFamily">@fonts/farroya.ttf</item>
        <item name="colorControlActivated">@color/color_control_activated</item>
    </style>
    <style name="editStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <!-- Style attributes -->
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusBottomEnd">0dp</item>
        <item name="endIconTint">@color/colorPrimary</item>
        <item name="boxBackgroundMode">outline</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="android:textColorHint">#80000000</item>
        <item name="colorControlNormal">#000</item>
        <item name="errorTextAppearance">@color/error_color</item>
        <!-- Theme attributes -->

    </style>
</resources>
